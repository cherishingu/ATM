<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#009ca8">
        <ImageView
            android:id="@+id/back_card"
            android:layout_marginLeft="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_back" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
           >
            <TextView
                android:text="添加银行卡"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fefefefe"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/card_bond"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#d5d5d5"
        >

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="*"
            android:textColor="#ff0000"
            android:gravity="right|center"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="请绑定持卡人本人银行卡号"
            android:layout_marginRight="50dp"
            android:gravity="left|center"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/card_bond_detail_1"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:text="开户行"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/text_bg3"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:background="@drawable/black_edit_edittext_normal">
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/card_bond_detail_2"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/card_bond_detail_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:text="银行卡号"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/text_bg3"/>

        <EditText
            android:id="@+id/cardnum_edit"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:inputType="number"
            android:paddingLeft="16dp"
            android:background="@drawable/black_edit_edittext_normal"
            android:hint="请输入银行卡号"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/commit_btn"
            android:layout_width="154dp"
            android:layout_height="37dp"
            android:layout_marginTop="150dp"
            android:layout_centerInParent="true"
            android:text="提   交"
            android:textColor="#efefef"
            android:textSize="18dp"
            android:background="@drawable/btn_nomal3"/>
    </RelativeLayout>

</LinearLayout>