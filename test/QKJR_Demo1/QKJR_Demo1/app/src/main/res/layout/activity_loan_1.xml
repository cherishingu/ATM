<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="12dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_loan1"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="申请贷款"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@mipmap/img_push"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/img1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="申请快捷、无抵押、无担保"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/img2"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="急速审核、闪电放款"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#f2f2f2"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@mipmap/img3"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="循环使用、随借随贷"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/agree"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@mipmap/protocol_agree"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"

            />

        <TextView
            android:id="@+id/need_underline2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="@string/protocol"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/need_underline1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="《客户服务协议》"
            android:textSize="16dp"
            android:textColor="@color/theme"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <Button
        android:id="@+id/loan1_next_step"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="下 一 步"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_shape"

        />
</LinearLayout>