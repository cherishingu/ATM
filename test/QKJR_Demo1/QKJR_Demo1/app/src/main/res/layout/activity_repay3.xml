<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="12dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_repay3"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="还 款"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/repay_tev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/text_shape_strocker"
        android:text="还款 200元"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:gravity="center"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#EDf0f0"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        >
        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@mipmap/img_finish"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付成功"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:orientation="vertical"
        android:background="@drawable/text_shape"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="商品"
                android:textSize="16dp"
                android:textColor="@color/black"

                android:gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="还款"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="交易时间"
                android:textSize="16dp"
                android:textColor="@color/black"

                android:gravity="center"
                />
            <TextView
                android:id="@+id/repay_time_tev"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="2016-5-20 13:46"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="支付方式"
                android:textSize="16dp"
                android:textColor="@color/black"

                android:gravity="center"
                />
            <TextView
                android:id="@+id/repay_way_tev"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="支付宝"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="交易单号"
                android:textSize="16dp"
                android:textColor="@color/black"

                android:gravity="center"
                />
            <TextView
                android:id="@+id/repay_num_tev"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="01010101010100"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"
                />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>