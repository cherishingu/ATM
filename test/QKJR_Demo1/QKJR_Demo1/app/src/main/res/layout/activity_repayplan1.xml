<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="12dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_repay_plan"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="还款计划"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:id="@+id/grid00_tev"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="30dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:gravity="center"
            android:background="@drawable/text_biankuang05dp"
            android:text="每月还款总额"/>
        <TextView
            android:id="@+id/grid01_tev"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/text_biankuang05dp"
            android:text="还款年份"/>
        <TextView
            android:id="@+id/grid02_tev"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:text="还款月份"
            android:background="@drawable/text_biankuang05dp"
            />
        <TextView
            android:id="@+id/grid03_tev"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_height="30dp"
            android:background="@drawable/text_biankuang05dp"
            android:text="最后还款日"/>
    </LinearLayout>




        <ListView
            android:isScrollContainer="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:footerDividersEnabled="true"
            android:dividerHeight="1dp"
            android:id="@+id/listview"
            ></ListView>




</LinearLayout>