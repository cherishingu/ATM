<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal"
        android:background="#009ca8">
        <ImageView
            android:id="@+id/img_btn"
            android:layout_marginLeft="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_back"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            >
            <TextView
                android:text="解绑银行卡"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="22dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fefefefe"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="76dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:background="@drawable/chinabank_bkg">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/zhongguo"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:gravity="left"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">
                    <TextView
                        android:id="@+id/chinabank_tev"
                        android:layout_marginTop="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#fefefefe"
                        android:text="中国银行"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="储蓄卡"
                        android:textColor="#fefefefe"
                        android:layout_marginLeft="2dp"
                        android:textSize="12dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fefefefe"
                    android:layout_alignParentBottom="true"
                    android:textSize="16dp"
                    android:text="*** **** **** 6667"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/redio_btn1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:checked="true"
                    android:background="@mipmap/checked_rediobtn"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="76dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:background="@drawable/jianshebank">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/jianshe"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp">
                <LinearLayout
                    android:gravity="left"
                    android:layout_width="fill_parent"
                    android:orientation="vertical"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:textColor="#fefefefe"
                        android:text="中国建设银行银行"/>
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="储蓄卡"
                        android:textColor="#fefefefe"
                        android:layout_marginLeft="2dp"
                        android:textSize="12dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fefefefe"
                    android:layout_alignParentBottom="true"
                    android:textSize="16dp"
                    android:text="*** **** **** 6667"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="fill_parent">
                <ImageView
                    android:id="@+id/redio_btn2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:checked="false"
                    android:background="@mipmap/unchecked_rediobtn"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp">
        <Button
            android:id="@+id/unbindcard_btn"
            android:layout_width="240dp"
            android:layout_height="37dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_nomal3"
            android:textColor="#fefefefe"
            android:text="解除绑定"
            android:textSize="20dp"/>
    </RelativeLayout>
</LinearLayout>