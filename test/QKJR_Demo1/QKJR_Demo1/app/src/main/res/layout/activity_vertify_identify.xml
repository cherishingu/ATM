<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="12dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/back_ver2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="身份验证"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="请输入个人信息"
        android:background="#d5d5d5"
        android:textSize="16dp"
        android:textColor="#6f6f6f"
        android:paddingLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:text="姓  名"
            android:textSize="16dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/text_shape_nostroke"
            />

        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/textview_shape"
            android:hint="请输入您的真实姓名"
            android:textColorHint="@color/text_bg"
            android:textColor="#6f6f6f"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:text="身份证号码"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:background="@drawable/text_shape_nostroke"
            />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="32dp"
            android:background="@drawable/textview_shape"
            android:textColorHint="@color/text_bg"
            android:hint="请输入您的身份证号码"
            android:textColor="#6f6f6f"
            android:paddingLeft="10dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:text="已绑定的银行卡 :*******"

        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="16dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="绑定手机号码"
        android:textColor="#6f6f6f"
        android:background="@color/text_bg"
        android:textSize="16dp"
        android:paddingLeft="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <TextView
            android:layout_width="91dp"
            android:layout_height="32dp"
            android:text="手机号码"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:background="@drawable/text_shape_nostroke"
            />
        <EditText
            android:layout_marginLeft="20dp"
            android:layout_width="200dp"
            android:id="@+id/phone_num_identify"
            android:layout_height="30dp"
            android:background="@drawable/textview_shape"
            android:textColor="@color/text_color"
            android:paddingLeft="20dp"
            />
    </LinearLayout>

    <Button

        android:id="@+id/loan1_next_step"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="下 一 步"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_shape"
        />

</LinearLayout>