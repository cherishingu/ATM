<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/ll_status_bar"
        layout="@layout/item_status_bar_fill" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#009ca8">
        <ImageView
            android:id="@+id/back_info3"
            android:layout_marginLeft="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/img_back"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            >
            <TextView
                android:text="完善信息"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fefefefe"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hireyouself"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e4e7e6"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="职业信息"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="50dp"
            android:gravity="left|center"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="单位名称"/>

        <EditText
            android:id="@+id/workplacename_edit"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="单位详细地址"/>

        <EditText
            android:id="@+id/adressdetail_edit"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="单位电话"/>

        <EditText
            android:id="@+id/workplacephone_edit"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:inputType="number"
            android:hint="请输入" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="所在部门"/>

        <EditText
            android:id="@+id/workunit_edit1"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="单位性质"/>

        <LinearLayout
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/unittype_spin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hiretype_linelay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="雇佣类型"/>

        <LinearLayout
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/hiretype_spin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hireselfchoose_linelay"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:id="@+id/card_bond"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e4e7e6"
        >
        <TextView
            android:layout_width="10dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:gravity="center|right"
            android:text="*"
            android:textSize="16dp"
            android:textColor="#f70303"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:text="自雇人士必填"
            android:layout_marginRight="50dp"
            android:gravity="left|center"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="经营范围"/>

        <EditText
            android:id="@+id/areaoprate_edit"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="32dp"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/text_bkg3_e4e7e6"
            android:text="经营时间"/>

        <LinearLayout
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/gray_edit_edittext_normal"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:hint="请输入"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/timeoprate_spin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <Button
            android:id="@+id/next_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:text="下 一 步"
            android:textColor="#efefef"
            android:textSize="18dp"
            android:background="@drawable/btn_nomal3"/>
    </RelativeLayout>
</LinearLayout>