<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_push"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <SeekBar
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:layout_height="wrap_content"
            android:thumb="@mipmap/img_vernier"
            android:max="300"
            android:id="@+id/seekbar"
            android:progress="150"
            android:progressDrawable="@drawable/progressbar_shape"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:textSize="20dp"
                android:gravity="right"
                android:layout_marginRight="30dp"
                android:text="5000"
                android:layout_alignParentRight="true"
                android:textColor="@color/theme"
                />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="top|left"
                android:layout_marginLeft="30dp"
                android:text="0"
                android:paddingTop="2dp"
                android:textColor="@color/theme"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            >
            <Button
                android:id="@+id/three_time"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="3期"
                android:textSize="16dp"
                android:background="@drawable/btn_shape_black"
                />
            <Button
                android:layout_width="70dp"
                android:id="@+id/six_time"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="6期"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_shape_black"
                />
            <Button
                android:id="@+id/twelve_time"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:textColor="@color/black"
                android:text="12期"
                android:textSize="16dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/btn_shape_black"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="预计每月还款金额:"
                android:layout_gravity="center_vertical"
                android:gravity="right|bottom"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/repayonce_tev"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="500"
                android:layout_gravity="center_vertical"
                android:gravity="left|bottom"
                android:layout_marginLeft="20dp"
                android:textSize="22dp"
                android:textColor="@color/black"
                android:singleLine="true"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_apply_loan"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_shape"
            android:textColor="@color/white"
            android:text="申      请"
            android:textSize="20dp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="170dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="贷款金额"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="bottom|right"
            />
        <TextView
            android:id="@+id/loan_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="1000"
            android:textColor="@color/theme"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>

