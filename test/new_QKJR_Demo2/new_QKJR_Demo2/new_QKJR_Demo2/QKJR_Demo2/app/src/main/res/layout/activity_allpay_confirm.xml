<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/style"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/allpay_confirm_back"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="订单确定"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="126dp"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:background="@color/white"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/allpay_confirm"
            android:layout_gravity="center|left"
            android:gravity="left"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人："
                android:textSize="13dp"
                android:textColor="#343434"
                />
                <TextView
                    android:id="@+id/order_adress_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="** "
                    android:textSize="13dp"
                    android:textColor="#343434"
                    />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址："
                android:textSize="11dp"
                android:textColor="#343434"
                />
                <TextView
                    android:id="@+id/order_adress_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**省**市**区***街道***********"
                    android:textSize="11dp"
                    android:textColor="#343434"
                    />
                </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（收货不便时，可选择免费代收服务）"
                android:textSize="11dp"
                android:layout_gravity="left"
                android:textColor="@color/word_color"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="360dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/line"
        />
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/confirm_add_address"
            android:id="@+id/confirm_add"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加收货地址"
            android:textSize="13dp"
            android:textColor="#737373"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/img_confirmorder"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:background="@mipmap/img_confirm_good"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_confirmorder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 苹果（Apple）iPhone 6s 64G"
                    android:textSize="13dp"
                    android:textColor="#343434"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 颜色：白色\n"
                    android:textSize="11dp"
                    android:textColor="#737373"/>
                <TextView
                    android:id="@+id/text_confirmorder_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" ¥6988.00"
                    android:textSize="12dp"
                    android:textColor="@color/theme"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <TextView
            android:id="@+id/confirm_staging_order"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_width="360dp"
            android:visibility="invisible"
            android:layout_height="31dp"
            android:layout_marginLeft="16dp"
            android:text="付款方式：分期付款  475.64×12期（含服务费）"
            android:textSize="13dp"
            android:textColor="#f58492"/>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="订单编号：123456780910239\n购买时间：2016.08.22  20:52:09"
            android:textSize="11dp"
            android:textColor="#737373"/>
    </LinearLayout>

    <Button
        android:layout_width="329dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="确认购买"
        android:textColor="@color/white"
        android:textSize="19dp"
        android:id="@+id/confirm_buy"
        android:gravity="center"
        android:background="@drawable/btn_shape"
        />
</LinearLayout>



