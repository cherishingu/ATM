<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/style">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/apply_status_back"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="申请状态"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="分期申请"
            android:layout_gravity="bottom"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日期"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="商品"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="金额"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="期数"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="状态"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/text_apply_status_date1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2016年\n5月10日"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status_name1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="苹果（apple）\niphone6s 64G"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status_money1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="475.64元"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status_number1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="第一期"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
            <TextView
                android:id="@+id/text_apply_status1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="审核通过"
                android:textSize="10dp"
                android:textColor="#f58492"
                android:layout_weight="1"/>
                <Button
                    android:background="@color/white"
                    android:id="@+id/btn_applystatus_pay"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="点击付款"
                    android:textSize="10dp"
                    android:textColor="@color/theme"
                    android:gravity="center"


                    />
                </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="退货申请"
            android:layout_gravity="bottom"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="日期"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="商品"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="金额"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="期数"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="状态"
                android:textSize="14dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_gravity="center"
            android:layout_height="1dp"
            android:background="@color/line"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/text_apply_status_date2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2016年\n5月10日"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status_name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="苹果（apple）\niphone6s 64G"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status_money2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="475.64元"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status_number2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="第一期"
                android:textSize="10dp"
                android:textColor="@color/word_color"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/text_apply_status2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="审核中"
                android:textSize="10dp"
                android:textColor="#f58492"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



