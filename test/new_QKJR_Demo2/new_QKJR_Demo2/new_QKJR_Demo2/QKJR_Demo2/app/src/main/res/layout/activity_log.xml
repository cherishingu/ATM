<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/style">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/log_back"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登 录"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="102dp"
        android:orientation="vertical"
        android:paddingTop="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"

        android:gravity="center"
        android:background="@drawable/text_shape"
        >
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/style"
            />
        <EditText
            android:id="@+id/phone_num_log"
            android:layout_width="360dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:hint="请输入手机号码"
            android:gravity="left|center_vertical"
            android:textColor="#737373"
            android:singleLine="true"
            android:maxLength="20"
            android:textSize="17dp"
            android:phoneNumber="true"
            android:paddingLeft="10dp"
            android:background="@color/white"
            />
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="?attr/actionBarSize"
            >
            <EditText
                android:id="@+id/pwd_log"
                android:layout_width="360dp"
                android:layout_gravity="center"
                android:layout_height="51dp"
                android:hint="请输入您的密码"
                android:background="@color/white"
                android:gravity="left|center_vertical"
                android:textColor="#737373"
                android:singleLine="true"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:password="true"
                android:textSize="17dp"
                />
            <ImageView
                android:layout_width="30dp"
                android:layout_marginRight="20dp"
                android:layout_height="30dp"
                android:src="@mipmap/img_visible"
                android:scaleType="centerCrop"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/log_visible"
                />
        </FrameLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            />
    </LinearLayout>
    <Button
        android:layout_width="329dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="登    录"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/log_in"
        android:gravity="center"
        android:background="@drawable/btn_shape"
        />
    <LinearLayout
        android:layout_width="329dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="找回密码"
            android:gravity="left"
            android:textSize="12dp"
            android:clickable="true"
            android:id="@+id/log_find"
            android:textColor="@color/blue"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="立即注册"
            android:id="@+id/log_regist"
            android:clickable="true"
            android:gravity="right"
            android:textSize="12dp"
            android:textColor="@color/blue"
            />

    </LinearLayout>

</LinearLayout>



