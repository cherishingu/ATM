<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_back"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/pwd_log_back"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:textSize="22dp"
            android:textColor="@color/white"
            android:layout_marginRight="50dp"
            android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="102dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:background="@color/white"
        >
        <EditText
            android:id="@+id/pwd_phone_num"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:hint="请输入您的手机号"
            android:gravity="left|center_vertical"
            android:textColor="@color/word_color"
            android:phoneNumber="true"
            android:singleLine="true"
            android:maxLength="20"
            android:textSize="17dp"
            android:paddingLeft="10dp"
            />
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="#b9b9b9"
            />
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/pwd_identity_code"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:layout_height="50dp"
                android:hint="请输入手机验证码"
                android:gravity="left|center_vertical"
                android:textColor="@color/word_color"
                android:singleLine="true"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:textSize="17dp"
                />
            <Widgets.TimeCountView
                android:id="@+id/pwd_time_count"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="29dp"
                android:layout_gravity="center"
                app:text="获取验证码"
                android:text="获取验证码"
                android:textColor="@color/word_color"
                app:maxNum="60"
                android:textSize="13dp"
                android:background="@drawable/text_shape"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="329dp"
        android:layout_height="29dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/pwd_log"
        android:background="@drawable/btn_shape"
        />

</LinearLayout>