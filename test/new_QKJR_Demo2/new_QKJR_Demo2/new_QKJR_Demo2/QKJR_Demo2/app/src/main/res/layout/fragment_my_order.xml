<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/style"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/theme"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的订单"
            android:textSize="19dp"
            android:textColor="@color/white"
            android:layout_marginRight="0dp"
            android:gravity="center"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_marginLeft="-50dp"
            android:layout_height="30dp"
            android:src="@mipmap/img_myorder_phone"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            android:id="@+id/myorder_phone"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_confirm_good"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 苹果（Apple）iPhone 6s 64G"
                    android:textSize="13dp"
                    android:textColor="#343434"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 颜色：白色\n"
                    android:textSize="11dp"
                    android:textColor="#737373"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ¥5888.00"
                        android:textSize="12dp"
                        android:textColor="@color/theme"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="140dp"
                        android:layout_gravity="right"
                        android:text="申请退货"
                        android:textColor="@color/word_color"
                        android:textSize="11dp"
                        android:id="@+id/myorder_apply"
                        android:gravity="center"
                        android:background="@drawable/text_shape"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_width="360dp"
            android:layout_height="31dp"
            android:layout_marginLeft="16dp"
            android:text="付款方式：分期付款  475.64×12期（含服务费）"
            android:textSize="13dp"
            android:textColor="#f58492"/>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="订单编号：123456780910239\n购买时间：2016.08.22  20:52:09"
            android:textSize="11dp"
            android:textColor="#737373"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="7dp"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_gravity="center"
                android:src="@mipmap/img_confirm_good"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 苹果（Apple）iPhone 6s 64G"
                    android:textSize="13dp"
                    android:textColor="#343434"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 颜色：白色\n"
                    android:textSize="11dp"
                    android:textColor="#737373"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ¥5888.00"
                        android:textSize="12dp"
                        android:textColor="@color/theme"/>
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="19dp"
                        android:layout_marginLeft="140dp"
                        android:layout_gravity="right"
                        android:text="申请退货"
                        android:textColor="@color/word_color"
                        android:textSize="11dp"
                        android:id="@+id/myorder_apply2"
                        android:gravity="center"
                        android:background="@drawable/text_shape"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_width="360dp"
            android:layout_height="31dp"
            android:layout_marginLeft="16dp"
            android:text="付款方式：全额付款"
            android:textSize="13dp"
            android:textColor="#f58492"/>
        <View
            android:layout_width="360dp"
            android:layout_height="1dp"
            android:background="@color/line"
            />
        <TextView
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:text="订单编号：123456780910239\n购买时间：2016.08.22  20:52:09"
            android:textSize="11dp"
            android:textColor="#737373"/>
    </LinearLayout>
</LinearLayout>



