<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/style">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/theme"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="个人中心"
                android:textSize="22dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="169dp"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/person_head"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/img_personcenter"/>
            <TextView
                android:id="@+id/person_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击并登陆"
                android:layout_below="@+id/person_head"
                android:layout_centerHorizontal="true"
                android:textSize="16dp"
                android:textColor="#a9aaad"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="204dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="51dp"
                android:background="@color/white"

                >
                <Button
                    android:id="@+id/person_repay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/img_person_back"

                    android:text="我要还款"
                    android:textSize="17dp"
                    android:paddingLeft="16dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:textColor="#737373"/>

            </LinearLayout>
            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:background="#b9b9b9"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="51dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/person_apply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                   android:paddingLeft="16dp"
                    android:text="申请状态"
                    android:drawableRight="@mipmap/img_person_back"
                    android:textSize="17dp"
                    android:gravity="center_vertical"
                    android:background="@color/white"
                    android:textColor="#737373"/>


            </LinearLayout>
            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:background="#b9b9b9"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="51dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/person_repay_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="还款记录"
                    android:textSize="17dp"
                    android:drawableRight="@mipmap/img_person_back"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="16dp"
                    android:textColor="#737373"/>

            </LinearLayout>
            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:background="#b9b9b9"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="51dp"
                android:background="@color/white"
                >
                <Button
                    android:id="@+id/person_information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/img_person_back"
                    android:background="@color/white"
                    android:paddingLeft="16dp"
                    android:text="个人信息"
                    android:textSize="17dp"
                    android:gravity="center_vertical"
                    android:textColor="#737373"/>

            </LinearLayout>
            <View
                android:layout_width="360dp"
                android:layout_height="1dp"
                android:background="#b9b9b9"
                />
        </LinearLayout>
        <Button
            android:layout_width="329dp"
            android:layout_height="35dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:id="@+id/log_out"
            android:gravity="center"
            android:background="@drawable/btn_shape"
            />
    </LinearLayout>

</FrameLayout>